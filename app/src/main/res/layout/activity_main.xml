<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/txtNomeFuncionario"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center"
        android:hint="Nome Do FuncionÃ¡rio"
        android:inputType="textPersonName"

        />

    <EditText
        android:id="@+id/txtValorHoraTrabalhada"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center"
        android:hint="Valor da hora trabalhada"
        android:inputType="numberDecimal"
        />

    <EditText
        android:id="@+id/txtDiasTrabalhados"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center"
        android:hint="Qtd de dias trabalhados"
        android:inputType="number"
        />

    <EditText
        android:id="@+id/txtQtdHorasDias"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center"
        android:hint="Qtd Horas Dias"
        android:inputType="number"
        />

    <TextView
        android:id="@+id/lblSalarioBruto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Salario Bruto:"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:textSize="16dp"
        />

    <TextView
        android:id="@+id/lblDescIss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Desc. ISS:"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="15dp"
        android:textSize="16dp"
        />

    <TextView
        android:id="@+id/lblDescFGTS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Desc. FGTS:"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="15dp"
        android:textSize="16dp"
        />

    <TextView
        android:id="@+id/lblSalarioLiquido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Salario Liquido:"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="15dp"
        android:textSize="16dp"
        />

    <Button
        android:id="@+id/btnCalcular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calcular"
        android:textSize="16dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="32dp"
        android:layout_marginRight="15dp"
        />

</LinearLayout>